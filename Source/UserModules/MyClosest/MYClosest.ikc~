<?xml version="1.0"?>

<group name="MYClosest" description="Finds the point closest to a Kinec">

	<description type="text">
	  Finds the point closest to a Kinect, and return its coordinates.
	</description>

	<example description="A simple example">
		<module
			class="MYClosest"
			name="MYClosest"
		/>
	</example>

	<input name="depth" description="The depth of the image" size_x="640" size_y="480" />
	<output name="ClosePosition" description="The closest point" size="2" />
	<output name="CloseDistM" description="The closest distance (meter)" size="3" />
	<output name="CloseDist" description="The closest distance" size="1" />

	<module class="MYClosest" />

